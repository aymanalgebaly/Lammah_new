<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_new"
    tools:context=".ui.activities.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:background="@drawable/lammah"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:id="@+id/lin_two">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="5dp"
                android:layout_marginTop="30dp"
                android:paddingEnd="5dp"
                android:id="@+id/ed_username"
                android:hint="البريد الالكتروني"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:inputType="textNoSuggestions"
                android:drawableEnd="@drawable/ic_person_black_24dp"
                android:drawablePadding="5dp"/>


            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/progress_bar"
                android:visibility="gone"
                android:layout_gravity="center" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorPrimary"
                android:text="ارسال"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                android:id="@+id/btn_login"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:background="@color/blue"
                android:text=" تسجيل الدخول باستخدام الفيس بوك"
                android:id="@+id/btn_register_face"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>